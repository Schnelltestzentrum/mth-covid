<%= form_with url: customers_url, method: :get, class: 'form-inline row' do |form| %>
  <div class="form-group mb-2 col-sm-4">
    <%= form.label :start_date, class: 'sr-only' %>
    <%= form.date_field :start_date, class: 'form-control', value: @start_date, max: Date.today %>
  </div>
  <div class="form-group mb-2 col-sm-4">
    <%= form.label :end_date, class: 'sr-only' %>
    <%= form.date_field :end_date, class: 'form-control', value: @end_date, max: Date.today %>
  </div>
  <div class='col-sm-4'>
    <%= form.submit 'Filter', class: 'btn btn-info mt-4' %>
  </div>
<% end %>